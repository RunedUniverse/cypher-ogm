<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.runeduniverse.lib.rogm</groupId>
		<artifactId>rogm-parent</artifactId>
		<version>2.1</version>
	</parent>

	<artifactId>rogm-sources-bom</artifactId>
	<version>${project.parent.version}.${artifact-version}</version>
	<packaging>pom</packaging>

	<name>ROGM - Bill of Sources</name>

	<properties>
		<root-dir>${project.parent.basedir}</root-dir>
		<artifact-version>1</artifact-version>
		<!-- ARTIFACT VERSIONS -->
		<min-runeduniverse-utils-common-version>1.0.0</min-runeduniverse-utils-common-version>
		<min-runeduniverse-utils-logging-version>1.0.0</min-runeduniverse-utils-logging-version>
		<min-runeduniverse-utils-errors-version>1.0.0</min-runeduniverse-utils-errors-version>
		<min-runeduniverse-utils-chain-version>1.0.0</min-runeduniverse-utils-chain-version>
		<min-runeduniverse-utils-scanner-version>1.0.5</min-runeduniverse-utils-scanner-version>
		<!-- ARTIFACT VERSIONS - OBJECT MAPPER -->
		<min-jackson-databind-version>2.12.6.1</min-jackson-databind-version>
		<!-- ARTIFACT VERSIONS - OPTIONAL DRIVERS / DB CONNECTORS -->
		<min-neo4j-java-driver-version>4.0.1</min-neo4j-java-driver-version>
		<!-- ARTIFACT VERSIONS - COMPILER -->
		<min-lombok-version>1.18.12</min-lombok-version>
		<!-- VERSIONS - TESTING -->
		<min-junit-platform-surefire-provider-version>1.3.2</min-junit-platform-surefire-provider-version>
		<min-junit-platform-launcher-version>1.7.1</min-junit-platform-launcher-version>
		<min-junit-platform-runner-version>1.7.1</min-junit-platform-runner-version>
		<min-junit-jupiter-api-version>5.7.1</min-junit-jupiter-api-version>
		<min-junit-jupiter-engine-version>5.7.1</min-junit-jupiter-engine-version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- UTILS -->
			<dependency>
				<groupId>net.runeduniverse.lib.utils</groupId>
				<artifactId>utils-common</artifactId>
				<version>[${min-runeduniverse-utils-common-version},)</version>
			</dependency>
			<dependency>
				<groupId>net.runeduniverse.lib.utils</groupId>
				<artifactId>utils-logging</artifactId>
				<version>[${min-runeduniverse-utils-logging-version},)</version>
			</dependency>
			<dependency>
				<groupId>net.runeduniverse.lib.utils</groupId>
				<artifactId>utils-errors</artifactId>
				<version>[${min-runeduniverse-utils-errors-version},)</version>
			</dependency>
			<dependency>
				<groupId>net.runeduniverse.lib.utils</groupId>
				<artifactId>utils-chain</artifactId>
				<version>[${min-runeduniverse-utils-chain-version},)</version>
			</dependency>
			<dependency>
				<groupId>net.runeduniverse.lib.utils</groupId>
				<artifactId>utils-scanner</artifactId>
				<version>[${min-runeduniverse-utils-scanner-version},)</version>
			</dependency>

			<!-- OBJECT MAPPER -->
			<dependency>
				<groupId>com.fasterxml.jackson.core</groupId>
				<artifactId>jackson-databind</artifactId>
				<version>[${min-jackson-databind-version},)</version>
			</dependency>

			<!-- OPTIONAL DRIVERS / DB CONNECTORS -->
			<dependency>
				<groupId>org.neo4j.driver</groupId>
				<artifactId>neo4j-java-driver</artifactId>
				<version>[${min-neo4j-java-driver-version},)</version>
			</dependency>
			
			<!-- COMPILER -->
			<dependency>
				<groupId>org.projectlombok</groupId>
				<artifactId>lombok</artifactId>
				<version>[${min-lombok-version},)</version>
				<scope>provided</scope>
			</dependency>
			
			<!-- TESTING -->
			<dependency>
				<groupId>org.junit.jupiter</groupId>
				<artifactId>junit-jupiter-api</artifactId>
				<version>[${min-junit-jupiter-api-version},)</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>org.junit.jupiter</groupId>
				<artifactId>junit-jupiter-engine</artifactId>
				<version>[${min-junit-jupiter-engine-version},)</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>org.junit.platform</groupId>
				<artifactId>junit-platform-launcher</artifactId>
				<version>[${min-junit-platform-launcher-version},)</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>org.junit.platform</groupId>
				<artifactId>junit-platform-runner</artifactId>
				<version>[${min-junit-platform-runner-version},)</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>install</id>
			<build>
				<defaultGoal>
					org.apache.maven.plugins:maven-clean-plugin:clean@jenkins
					org.apache.maven.plugins:maven-resources-plugin:resources@jenkins
					org.apache.maven.plugins:maven-gpg-plugin:sign@jenkins
					org.apache.maven.plugins:maven-install-plugin:install@jenkins
				</defaultGoal>
			</build>
		</profile>
		<profile>
			<id>deploy</id>
			<build>
				<defaultGoal>
					org.apache.maven.plugins:maven-deploy-plugin:deploy@jenkins
				</defaultGoal>
			</build>
		</profile>
	</profiles>
</project>